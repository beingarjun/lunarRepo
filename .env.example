# lunarRepo Environment Configuration

# Server Settings
ENVIRONMENT=development
PORT=8000
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lunar_repo
REDIS_URL=redis://localhost:6379

# Authentication
AUTH_SECRET=your-secret-key-here-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# OAuth Providers
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Build System
CACHE_BACKEND=redis
BUILD_TIMEOUT=3600
MAX_PARALLEL_BUILDS=10

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# AWS/Cloud Configuration (Optional)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=lunar-repo-builds

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SENDGRID_API_KEY=your-sendgrid-key

# Feature Flags
ENABLE_ENTERPRISE_FEATURES=false
ENABLE_CLOUD_ORCHESTRATION=false
ENABLE_SAAS_MODE=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
