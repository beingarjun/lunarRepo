{
  "name": "lunarRepo",
  "version": "1.0.0",
  "description": "Open-source build orchestration and task execution platform",
  "main": "server/api.py",
  "scripts": {
    "dev": "uvicorn server.api:app --reload",
    "start": "uvicorn server.api:app --host 0.0.0.0 --port 8000",
    "test": "pytest tests/ --cov=. --cov-report=html",
    "lint": "flake8 . && black --check .",
    "format": "black . && isort .",
    "build": "docker build -t lunar-repo:latest .",
    "deploy": "bash deploy-github.sh",
    "docs": "python -m pydoc -w server.api"
  },
  "dependencies": {
    "uvicorn": "^0.23.0",
    "fastapi": "^0.109.0",
    "sqlalchemy": "^2.0.0",
    "psycopg2-binary": "^2.9.0",
    "redis": "^5.0.0",
    "pydantic": "^2.0.0",
    "python-dotenv": "^1.0.0",
    "httpx": "^0.25.0",
    "click": "^8.1.0",
    "pyyaml": "^6.0.0"
  },
  "devDependencies": {
    "pytest": "^7.4.0",
    "pytest-cov": "^4.1.0",
    "pytest-asyncio": "^0.21.0",
    "flake8": "^6.1.0",
    "black": "^23.12.0",
    "isort": "^5.13.0",
    "mypy": "^1.7.0",
    "docker": "^6.1.0"
  },
  "engines": {
    "python": ">=3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beingarjun/lunarRepo.git"
  },
  "bugs": {
    "url": "https://github.com/beingarjun/lunarRepo/issues"
  },
  "homepage": "https://lunarrepo.dev",
  "keywords": [
    "build",
    "orchestration",
    "ci-cd",
    "devops",
    "automation",
    "cache",
    "deterministic"
  ],
  "author": {
    "name": "Arjun Malarman",
    "email": "arjun@lunarrepo.dev"
  },
  "license": "Apache-2.0"
}
